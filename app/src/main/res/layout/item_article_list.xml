<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/dimens_2dp"
    android:elevation="@dimen/dimens_4dp"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        style="@style/Widget.CardContent"
        android:background="@color/colorBlue"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_article"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/loading"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:layout_marginBottom="@dimen/dimens_16dp"/>

        <TextView
            android:id="@+id/txt_article_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="@color/colorWhite"
            android:layout_marginStart="@dimen/dimens_16dp"
            android:layout_marginEnd="@dimen/dimens_16dp"
            tools:text="This is development title"/>

        <TextView
            android:id="@+id/txt_article_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            tools:text="This is a development date"
            android:layout_marginStart="@dimen/dimens_16dp"
            android:layout_marginEnd="@dimen/dimens_16dp"
            android:layout_marginBottom="@dimen/dimens_16dp"/>

        <TextView
            android:id="@+id/txt_article_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:textColor="@color/colorWhite"
            tools:text="This is a development description"
            android:layout_marginStart="@dimen/dimens_16dp"
            android:layout_marginEnd="@dimen/dimens_16dp"
            android:layout_marginBottom="@dimen/dimens_16dp"/>


    </LinearLayout>

</androidx.cardview.widget.CardView>
